# Example .env file for text-share
# Set global and per-IP upload rate limits (per hour)
GLOBAL_UPLOAD_LIMIT=100
PER_IP_UPLOAD_LIMIT=10

# 10MB = 10 * 1024 * 1024 bytes
# Set the maximum size for image uploads
MAX_IMAGE_UPLOAD_SIZE_BYTES=10485760

# Set global and per-IP text input rate limits (per hour)
GLOBAL_TEXT_LIMIT=500
PER_IP_TEXT_LIMIT=100
